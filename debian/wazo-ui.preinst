#!/bin/sh

set -e

case "$1" in
    install)
    ;;

    upgrade)
        previous_version="$2"

        if dpkg --compare-versions "${previous_version}" lt '22.09'; then
            rm -f /etc/nginx/locations/http-enabled/wazo-ui
        fi
    ;;

    abort-upgrade)
    ;;

    *)
      echo "preinst called with unknown argument \`$1'" >&2
      exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
